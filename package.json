{
  "name": "scrcpy-gui",
  "version": "1.0.0",
  "description": "A beautiful GUI wrapper for scrcpy â€” Android mirroring & recording",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --enable-logging",
    "build": "set CSC_SKIP_SIGNING=true && set ELECTRON_BUILDER_CACHE=%LOCALAPPDATA%\\electron-builder\\Cache && electron-builder"
  },
  "build": {
    "appId": "com.scrcpy.gui",
    "productName": "Scrcpy GUI",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "assets/icon.png"
    },
    "extraResources": [
      {
        "from": "assets",
        "to": "assets",
        "filter": [
          "**/*"
        ]
      }
    ]
  },
  "keywords": [
    "scrcpy",
    "android",
    "mirror",
    "electron"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1"
  }
}